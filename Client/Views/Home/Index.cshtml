@{
    ViewBag.Title = "Home Page";
}

<h1>
    @ViewBag.Message
</h1>

<h2>
    @ViewBag.X + @ViewBag.Y = @ViewBag.Z
</h2>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Login
        </th>
        <th>
            Name
        </th>
        <th>
            Cpf
        </th>
        <th>
            PrimaryDdd
        </th>
        <th>
            PrimaryFone
        </th>
        <th>
            Email
        </th>       
        <th></th>
    </tr>

@foreach (var item in ViewBag.User)
{
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.Login
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Cpf
        </td>
        <td>
            @item.PrimaryDdd
        </td>
        <td>
            @item.PrimaryFone
        </td>
        <td>
            @item.Email
        </td>        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
