@model IEnumerable<Kilimanjaro.Domain.Vehicle>

@{
    ViewBag.Title = "Veículos";
}

<h2>Veículos</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Identification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chassis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastChangeDate)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.Identification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Chassis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        @if (item.LastChangeDate != null)
        {
            <td>
                @Html.DisplayFor(modelItem => item.LastChangeDate)
            </td>
        }
        else
        {
            <td>-</td>
        }
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
