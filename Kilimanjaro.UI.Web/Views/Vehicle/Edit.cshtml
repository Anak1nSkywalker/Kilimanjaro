@model Kilimanjaro.Domain.Vehicle

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Veículo</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Identification, "Identificação:", new { @class = "control-label col-md-2" })
            <div class="col-md-2">                
                @Html.TextBoxFor(model => model.Identification, new { @class = "form-control", @placeholder = "Identificação", @required = true })
                @Html.ValidationMessageFor(model => model.Identification)
            </div>
            @Html.LabelFor(model => model.Chassis, "Chassi:", new { @class = "control-label col-md-1" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Chassis, new { @class = "form-control", @placeholder = "Chassi", @required = true })
                @Html.ValidationMessageFor(model => model.Chassis)
            </div>
            @Html.LabelFor(model => model.Year, "Ano:", new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.Year, new { @type = "number", @class = "form-control", @placeholder = "Ano", @required = true })
                @Html.ValidationMessageFor(model => model.Year)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Weight, "Peso", new { @class = "control-label col-md-2" })
            <div class="col-md-2">

                @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @type = "number", @class = "form-control", @placeholder = "Peso", @required = true, @step = "0.01" }, })
                @Html.ValidationMessageFor(model => model.Weight)

            </div>
            @Html.LabelFor(model => model.Height, "Altura", new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Height, new { @type = "number", @class = "form-control", @placeholder = "Altura", @required = true , @step = "0.01" })
                @Html.ValidationMessageFor(model => model.Height)
            </div>            
            @Html.LabelFor(model => model.Width, "Largura:", new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Width, new { @type = "number", @class = "form-control", @placeholder = "Largura", @required = true, @step = "0.01" })
                @Html.ValidationMessageFor(model => model.Width)
            </div>            
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Length, "Comprimento", new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Length, new { @type = "number", @class = "form-control", @placeholder = "Comprimento", @required = true, @step = "0.01" })
                @Html.ValidationMessageFor(model => model.Length)
            </div>            
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UsefulAreaHeight, "Area Útil Altura", new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.UsefulAreaHeight, new { @type = "number", @class = "form-control", @placeholder = "Area Útil Altura", @step = "0.01" })
                @Html.ValidationMessageFor(model => model.UsefulAreaHeight)
            </div>

            @Html.LabelFor(model => model.UsefulAreaWidth, "Area Útil Largura", new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.UsefulAreaWidth, new { @type = "number", @class = "form-control", @placeholder = "Area Útil Largura", @step = "0.01" })
                @Html.ValidationMessageFor(model => model.UsefulAreaWidth)
            </div>
            @Html.LabelFor(model => model.UsefulAreaLength, "Area Útil Comprimento", new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.UsefulAreaLength, new { @type = "number", @class = "form-control", @placeholder = "Area Útil Comprimento", @step = "0.01" })
                @Html.ValidationMessageFor(model => model.UsefulAreaLength)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar Novo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>