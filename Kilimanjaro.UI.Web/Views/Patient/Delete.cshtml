@model Kilimanjaro.Domain.Patient

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir</h2>

<h3>Tem certeza que deseja excluir este registro?</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        @if (Model.Gender == "M")
        {
            <dd>Masculino</dd>
        }
        else
        {
            <dd>Feminino</dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Birthdate)
        </dt>

        <dd>
            @Html.Raw(Model.Birthdate.ToString("dd/MM/yyyy"))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rg)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rg)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MotherName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MotherName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PrimaryFone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrimaryDdd) @Html.DisplayFor(model => model.PrimaryFone)
        </dd>       

        <dt>
            @Html.DisplayNameFor(model => model.SecundaryFone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SecundaryDdd) @Html.DisplayFor(model => model.SecundaryFone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastChangeDate)
        </dt>

        @if (Model.LastChangeDate != null)
        {
            <dd>
                @Html.DisplayFor(model => model.LastChangeDate)
            </dd>
        }
        else
        {
            <dd>-</dd>
        }


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" onclick="return confirm('Tem certeza que deseja excluir o registro?');" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
